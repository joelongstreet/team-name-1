<div class='phrase-container'>
  {{#unless hint}}
    <div class='phrase'>Hints go here</div>
    <div class='hint-markers'>_____ __ ____</div>
  {{/unless}}

  {{#if phrase}}
    <div class='phrase'>{{phrase}}</div>
    <div class='hint-markers'>{{phraseToUnderscores phrase}}</div>
  {{else}}
    <div class='hint'>{{hint}}</div>
  {{/if}}
</div>

<h4 class='clearfix border-top'>

  {{#if duration}}
    <div class='progress progress-striped active'>
      <div class='progress-bar' role='progressbar' aria-valuenow='45' aria-valuemin='0' aria-valuemax='100' style='width: 100%'></div>
    </div>
  {{/if}}

  {{#if value}}
    <span class='pull-right'>{{value}} points</span>
  {{else}}
    <span class='pull-right'>Points go here</span>
  {{/if}}
</h4>