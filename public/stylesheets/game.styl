.actor
  position          absolute
  top               0
  left              0
  width             100%

#cardHint
#guessHistory
#guessInput
#actorQueue
  background-color  #fff
  border-radius     3px
  box-shadow        1px 1px 2px rgba(#000, .25)
#actorQueue
  .progress
    margin-bottom   0
  h4
    .pull-left
      margin-right  1em
h4
  padding           .5em
  background-color  #f3f3f3
  &.border-top
    border-top      1px solid #e5e5e5
  &.border-bottom
    border-bottom   1px solid #e5e5e5