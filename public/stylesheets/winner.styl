$basewidth = 50px
$tiles = 50

#winner
  position            absolute
  top                 0
  left                0
  bottom              0
  right               0                
  width               100%
  height              100%
  overflow            hidden

.winner, #winner
  position            absolute
  top                 0
  left                0
  width               100%
  height              100%
  overflow            hidden
  margin-left         0
  .btn
    margin-right      5px
    margin-top        5px
  .info
    box-shadow        0 0 5px rgba(0,0,0,.5)
    border-radius     3px
    position          absolute
    text-align        center
    width             400px
    height            375px
    top               50%
    left              50%
    margin-top        -190px
    margin-left       -190px
    z-index           100
    opacity           0
    transition        opacity 1s
    transition-delay  3s
  h3
    position          absolute
    top               0
    left              0
    opacity           0
    width             100%
    color             #fff
    text-shadow       0 0 4px #000
    font-size         3em
    text-align        center
    transition        opacity 1s
    transition-delay  3s
    z-index           200
  button
    opacity           0
    position          absolute
    top               0
    right             0
    z-index           200
    transition        opacity
    transition-delay  3s
  .video
    position          relative !important
    width             390px !important
    height            365px !important
    top               0 !important
    left              0 !important
    margin-top        0 !important
    margin-left       0 !important
    z-index           100
  .OT_video-container
    width             400px!important
    height            375px!important
    position          static
    top               0 !important
    left              0 !important
    z-index           100
  i
    display           block
    width             $basewidth
    height            0
    position          absolute
    top               0
    left              0
    transition        height 2s
    for n in (1..$tiles)
        &:nth-child({n})
          left          $basewidth * (n - 1)
    for n in (19..50)
      &:nth-child(10n-{n})
        transition-delay (1+sin(n*PI/12))s
    &:nth-child(5n-9)
      background-color  $colorSeries[0]
    &:nth-child(5n-10)
      background-color  $colorSeries[1]
    &:nth-child(5n-11)
      background-color  $colorSeries[2]
    &:nth-child(5n-12)
      background-color  $colorSeries[3]
    &:nth-child(5n-13)
      background-color  $colorSeries[4]
  &.falldown
    display           block
    .info
      opacity         1
    h3
    button
      opacity         1
    i
      height          100% !important
        
